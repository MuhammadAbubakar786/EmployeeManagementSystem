@using Microsoft.AspNetCore.Identity

<ul class="navbar-nav">

    @{ if (Context.Session.GetString("username") != null)
        {
            <li class="nav-item">
                <p class="nav-link text-dark">@Context.Session.GetString("username")</p>
            </li>
            <li class="nav-item">
                <a class="nav-link text-dark" asp-action="Logout" asp-controller="Users">Logout</a>
            </li>
        }
        else
        {

            <li class="nav-item">
                <a class="nav-link text-dark" asp-action="SignUp" asp-controller="Users">Register</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-dark" asp-action="Login" asp-controller="Users">Login</a>
            </li>
        }
    }


</ul>
